---
layout: null
---

<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0"
     xmlns:content="http://purl.org/rss/1.0/modules/content/"
     xmlns:dc="http://purl.org/dc/elements/1.1/"
     xmlns:media="http://search.yahoo.com/mrss/"
     xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ site.title | xml_escape }}</title>
    <link>{{ site.url }}{{ site.baseurl }}</link>
    <language>ru</language>
    <description>{{ site.description | xml_escape }}</description>
    <atom:link href="{{ site.url }}{{ site.baseurl }}/feed/dzen.xml"
               rel="self"
               type="application/rss+xml" />

    {% assign posts_limit = site.feed_items | default: 500 %}

    {% for post in site.posts limit:posts_limit %}
    <item>
      <title>{{ post.title | xml_escape }}</title>
      <link>{{ site.url }}{{ site.baseurl }}{{ post.url }}</link>
      <guid isPermaLink="true">{{ site.url }}{{ site.baseurl }}{{ post.url }}</guid>
      <pubDate>{{ post.date | date_to_rfc822 }}</pubDate>

      <!-- тип публикации для Дзена: черновик -->
      <category>native-draft</category>

      <!-- общая рубрика, если есть -->
      {% if post.categories.first %}
      <category>{{ post.categories.first }}</category>
      {% endif %}

      <!-- обложка -->
      {% assign cover = post.header.image | default: post.image %}
      {% if cover %}
      <enclosure url="{{ site.url }}{{ site.baseurl }}{{ cover }}"
                 type="image/jpeg" />
      {% endif %}

      <!-- полный контент -->
      <content:encoded><![CDATA[
        {% if cover %}
        <figure>
          <img src="{{ site.url }}{{ site.baseurl }}{{ cover }}"
               alt="{{ post.title | xml_escape }}"
               style="max-width:700px;width:100%;height:auto;">
        </figure>
        {% endif %}

        {{ post.content }}
      ]]></content:encoded>
    </item>
    {% endfor %}
  </channel>
</rss>
